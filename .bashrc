# auto-refresh log
function watch() {
    if [[ -z "$2" ]]; then
        orig=$1
        lines=$1
    else
        orig=$2
        lines=$2
    fi

    while true; do
        clear
        if [[ "$1" == "all" ]]; then
            git --no-pager log --all --decorate --graph --oneline -"$lines"
        fi

        sleep 5;
    done
}
